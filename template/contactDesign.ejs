                      <!-- Step 1 -->
                      <td
                        align="center"
                        style="padding: 0 8px; width: 25%; vertical-align: top"
                        class="stack-column process-step"
                      >
                        <div
                          style="
                            background: #f0a00a;
                            width: 48px;
                            height: 48px;
                            border-radius: 50%;
                            margin: 0 auto 16px auto;
                            text-align: center;
                            line-height: 48px;
                          "
                        >
                          <span
                            style="
                              color: #ffffff;
                              font-weight: bold;
                              font-size: 20px;
                            "
                            >1</span
                          >
                        </div>
                        <h3
                          style="
                            margin: 0 0 8px 0;
                            font-size: 16px;
                            color: #5e3e34;
                          "
                        >
                          Tư vấn Ban đầu
                        </h3>
                        <p
                          style="
                            margin: 0;
                            font-size: 14px;
                            line-height: 1.4;
                            color: #8c8a8a;
                          "
