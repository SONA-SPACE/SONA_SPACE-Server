    <script>
        // Hàm format thời gian theo định dạng Việt Nam
        function formatDateTime(date) {
            const hours = date.getHours().toString().padStart(2, '0');
            const minutes = date.getMinutes().toString().padStart(2, '0');
            const seconds = date.getSeconds().toString().padStart(2, '0');
            const day = date.getDate().toString().padStart(2, '0');
            const month = (date.getMonth() + 1).toString().padStart(2, '0');
            const year = date.getFullYear();

            return `${hours}:${minutes}:${seconds}   ${day}/${month}/${year}`;
        }

        // Lấy thời gian hiện tại
        const now = new Date();
        const currentTimeElement = document.getElementById('currentTime');
        if (currentTimeElement) {
            currentTimeElement.textContent = formatDateTime(now);
        }

        // Tính thời gian hỗ trợ (hiện tại + 24 giờ)
        const supportTime = new Date(now.getTime() + 24 * 60 * 60 * 1000);
        const supportTimeElement = document.getElementById('supportTime');
        if (supportTimeElement) {
            supportTimeElement.textContent = formatDateTime(supportTime);
        }
    </script>
