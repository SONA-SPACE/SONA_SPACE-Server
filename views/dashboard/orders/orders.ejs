  }

  function mapPaymentStatusClass(status) {
    switch (status) {
      case 'PENDING': return 'pending';
      case 'SUCCESS': return 'paid';
      case 'FAILED': return 'failed';
      case 'REFUNDED': return 'refunded';
      default: return 'pending';
    }
  }

  function mapShippingStatus(status) {
