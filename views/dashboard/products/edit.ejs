          imageGrid.insertBefore(loadedBox, uploadBox);
          input.value = "";
          // N·∫øu ƒë·ªß ·∫£nh th√¨ ·∫©n box upload
          if (imageGrid.querySelectorAll('.variant-image-item.loaded').length >= maxImages) {
            uploadBox.style.display = "none";
