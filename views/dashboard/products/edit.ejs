  // X·ª≠ l√Ω x√≥a ·∫£nh ch√≠nh
  mainImageContainer.querySelector(".remove-image")?.addEventListener("click", () => {
    const publicId = extractPublicIdFromUrl(mainImagePreview.src);
    if (publicId) removedImages.push(publicId);
