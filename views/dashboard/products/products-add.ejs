<!-- Trang Thêm Sản phẩm -->

<!-- Tiêu đề -->
<div class="dashboard-header-row">
    <h2 class="dashboard-title">Thêm sản phẩm</h2>
</div>

<!-- Container chính - chia 2 cột -->
<div class="add-product-container">
    <!-- Cột trái: Form thông tin sản phẩm -->
    <div class="product-form-column">
        <!-- Phần thông tin sản phẩm -->
        <div class="form-section">
            <h3 class="section-title">Thông tin sản phẩm</h3>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="productName">Tên sản phẩm</label>
                    <input type="text" id="productName" class="form-control" placeholder="Nhập tên sản phẩm">
                </div>
                <div class="form-group">
                    <label for="productCategory">Danh mục</label>
                    <div class="select-wrapper">
                        <select id="productCategory" class="form-control">
                            <option value="">Chọn danh mục</option>
                            <option value="sofas">Sofas</option>
                            <option value="chairs">Ghế</option>
                            <option value="tables">Bàn</option>
                            <option value="storage">Tủ & Kệ</option>
                            <option value="beds">Giường</option>
                            <option value="lamps">Đèn</option>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="productQuantity">Số lượng</label>
                    <input type="number" id="productQuantity" class="form-control" placeholder="Nhập số lượng">
                </div>
                <div class="form-group">
                    <label for="productStatus">Trạng thái</label>
                    <div class="select-wrapper">
                        <select id="productStatus" class="form-control">
                            <option value="">Chọn trạng thái</option>
                            <option value="visible">Hiển thị</option>
                            <option value="hidden">Ẩn</option>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="originalPrice">Giá gốc</label>
                    <input type="text" id="originalPrice" class="form-control" placeholder="Nhập giá gốc">
                </div>
                <div class="form-group">
                    <label for="salePrice">Giá giảm</label>
                    <input type="text" id="salePrice" class="form-control" placeholder="Nhập giá giảm">
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="productColor">Màu</label>
                    <div class="color-selector">
                        <div class="select-wrapper color-dropdown">
                            <select id="productColor" class="form-control">
                                <option value="">Tên màu</option>
                                <option value="red">Đỏ</option>
                                <option value="brown">Nâu</option>
                                <option value="black">Đen</option>
                                <option value="white">Trắng</option>
                                <option value="gray">Xám</option>
                            </select>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="color-preview">
                            <div class="color-circle" style="background-color: #8B4513;"></div>
                            <div class="color-white-circle"></div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group full-width">
                    <label for="productDescription">Mô tả</label>
                    <textarea id="productDescription" class="form-control" rows="5" placeholder="Nhập mô tả"></textarea>
                </div>
            </div>
        </div>
        
        <!-- Phần thông tin bổ sung -->
        <div class="form-section">
            <h3 class="section-title">Thông tin bổ sung</h3>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="productDepth">Độ sâu</label>
                    <div class="select-wrapper">
                        <select id="productDepth" class="form-control">
                            <option value="">Chọn trạng thái</option>
                            <option value="30cm">30 cm</option>
                            <option value="40cm">40 cm</option>
                            <option value="50cm">50 cm</option>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label for="productWidth">Chiều rộng</label>
                    <div class="select-wrapper">
                        <select id="productWidth" class="form-control">
                            <option value="">Chọn trạng thái</option>
                            <option value="50cm">50 cm</option>
                            <option value="60cm">60 cm</option>
                            <option value="70cm">70 cm</option>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="productHeight">Chiều cao</label>
                    <div class="select-wrapper">
                        <select id="productHeight" class="form-control">
                            <option value="">Chọn trạng thái</option>
                            <option value="80cm">80 cm</option>
                            <option value="90cm">90 cm</option>
                            <option value="100cm">100 cm</option>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label for="productMaxLoad">Tải trọng tối đa</label>
                    <div class="select-wrapper">
                        <select id="productMaxLoad" class="form-control">
                            <option value="">Chọn trạng thái</option>
                            <option value="100kg">100 kg</option>
                            <option value="150kg">150 kg</option>
                            <option value="200kg">200 kg</option>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="productSeatHeight">Chiều cao chỗ ngồi</label>
                    <div class="select-wrapper">
                        <select id="productSeatHeight" class="form-control">
                            <option value="">Chọn trạng thái</option>
                            <option value="40cm">40 cm</option>
                            <option value="45cm">45 cm</option>
                            <option value="50cm">50 cm</option>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label for="productMaterial">Chất liệu</label>
                    <div class="select-wrapper">
                        <select id="productMaterial" class="form-control">
                            <option value="">Chọn trạng thái</option>
                            <option value="wood">Gỗ</option>
                            <option value="fabric">Vải</option>
                            <option value="leather">Da</option>
                            <option value="metal">Kim loại</option>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Nút hành động -->
        <div class="form-actions">
            <button type="button" class="btn btn-cancel">Hủy</button>
            <button type="button" class="btn btn-save">Lưu</button>
        </div>
    </div>
    
    <!-- Cột phải: Upload hình ảnh -->
    <div class="image-upload-column">
        <div class="image-upload-container">
            <div class="main-upload-area">
                <div class="upload-placeholder">
                    <i class="far fa-image"></i>
                    <p>Drop your image here, or browse</p>
                    <p class="upload-hint">jpeg, png are allowed</p>
                </div>
            </div>
            
            <div class="thumbnail-upload-grid">
                <div class="thumbnail-upload-item">
                    <div class="upload-placeholder">
                        <i class="far fa-image"></i>
                    </div>
                </div>
                <div class="thumbnail-upload-item">
                    <div class="upload-placeholder">
                        <i class="far fa-image"></i>
                    </div>
                </div>
                <div class="thumbnail-upload-item">
                    <div class="upload-placeholder">
                        <i class="far fa-image"></i>
                    </div>
                </div>
                <div class="thumbnail-upload-item">
                    <div class="upload-placeholder">
                        <i class="far fa-image"></i>
                    </div>
                </div>
                <div class="thumbnail-upload-item">
                    <div class="upload-placeholder">
                        <i class="far fa-image"></i>
                    </div>
                </div>
                <div class="thumbnail-upload-item">
                    <div class="upload-placeholder">
                        <i class="far fa-image"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

