    <!-- <script src="/javascripts/products.js"></script> -->
    <!-- <script src="/javascripts/product-form.js"></script> -->
         <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
      // Kiểm tra xác thực khi tải trang dashboard
      document.addEventListener('DOMContentLoaded', function () {
        // Kiểm tra token và thông tin người dùng
        const token = localStorage.getItem('token');
        const user = JSON.parse(localStorage.getItem('user') || '{}');

        // Nếu không có token hoặc không phải admin, chuyển hướng về trang đăng nhập
        if (!token || !user || user.role !== 'admin') {
          window.location.href = '/';
          return;
        }

        // Cập nhật thông tin người dùng trên header
        const userNameElement = document.querySelector('.user-name');
        const userRoleElement = document.querySelector('.user-role');

        if (userNameElement && user.full_name) {
          userNameElement.textContent = user.full_name;
        }

        if (userRoleElement && user.role) {
          userRoleElement.textContent = user.role === 'admin' ? 'Quản trị viên' : user.role;
        }

        // Thêm nút đăng xuất
        const userProfile = document.querySelector('.user-profile');
        if (userProfile) {
          userProfile.addEventListener('click', function () {
            const dropdown = document.createElement('div');
            dropdown.className = 'user-dropdown';
            dropdown.innerHTML = `
          <ul>
            <li><a href="/dashboard/profile"><i class="fas fa-user-circle"></i> Hồ sơ</a></li>
            <li><a href="#" id="logout-btn"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a></li>
          </ul>
        `;

            // Xóa dropdown cũ nếu có
            const existingDropdown = document.querySelector('.user-dropdown');
            if (existingDropdown) {
              existingDropdown.remove();
            } else {
              document.body.appendChild(dropdown);

              // Vị trí dropdown
              const rect = userProfile.getBoundingClientRect();
              dropdown.style.position = 'absolute';
              dropdown.style.top = rect.bottom + 'px';
              dropdown.style.right = (window.innerWidth - rect.right) + 'px';

              // Xử lý đăng xuất
              document.getElementById('logout-btn').addEventListener('click', async function (e) {
                e.preventDefault();

                try {
                  // Gọi API đăng xuất để xóa token khỏi database
                  const response = await fetch('/api/auth/logout', {
                    method: 'POST',
                    headers: {
                      'Authorization': `Bearer ${token}`
                    }
                  });

                  if (response.ok) {
                    console.log('Đăng xuất thành công, token đã được xóa khỏi database');
                  } else {
                    console.error('Lỗi khi đăng xuất:', await response.json());
                  }
                } catch (error) {
                  console.error('Lỗi khi gọi API đăng xuất:', error);
                } finally {
                  // Xóa token và thông tin người dùng khỏi localStorage
                  localStorage.removeItem('token');
                  localStorage.removeItem('user');

                  // Chuyển hướng về trang đăng nhập
                  window.location.href = '/';
                }
              });

              // Đóng dropdown khi click ra ngoài
              document.addEventListener('click', function closeDropdown(e) {
                if (!userProfile.contains(e.target) && !dropdown.contains(e.target)) {
                  dropdown.remove();
                  document.removeEventListener('click', closeDropdown);
                }
              });
            }
          });
        }
      });
    </script>

    <style>
      .user-dropdown {
        background: white;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
        border-radius: 5px;
        z-index: 1000;
        min-width: 200px;
      }

      .user-dropdown ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .user-dropdown ul li {
        padding: 0;
      }

      .user-dropdown ul li a {
        padding: 10px 15px;
        display: block;
        color: #333;
        text-decoration: none;
        transition: background-color 0.2s;
      }

      .user-dropdown ul li a:hover {
        background-color: #f5f5f5;
      }

      .user-dropdown ul li a i {
        margin-right: 10px;
        width: 16px;
        text-align: center;
      }
    </style>

