      <script>
        // Kiểm tra xác thực khi tải trang dashboard
        document.addEventListener("DOMContentLoaded", function () {
          // Kiểm tra token và thông tin người dùng
          const token = localStorage.getItem("token");
          const user = JSON.parse(localStorage.getItem("user") || "{}");

          // Nếu không có token hoặc không phải admin, chuyển hướng về trang đăng nhập
          const allowedRoles = ['admin', 'staff'];
          if (!token || !user || !allowedRoles.includes(user.role)) {
            window.location.href = '/';
            return;
          }

          // Cập nhật thông tin người dùng trên header
          const userNameElement = document.querySelector(".user-name");
          const userRoleElement = document.querySelector(".user-role");

          if (userNameElement && user.full_name) {
            userNameElement.textContent = user.full_name;
          }
          const roleMap = {
            admin: 'Quản trị viên',
            staff: 'Nhân viên',
          };
          userRoleElement.textContent = roleMap[user.role] || user.role;

          // Thêm nút đăng xuất
          const userProfile = document.querySelector(".user-profile");
          if (userProfile) {
            userProfile.addEventListener("click", function () {
              const dropdown = document.createElement("div");
              dropdown.className = "user-dropdown";
              dropdown.innerHTML = `
          <ul>
            <li><a href="/dashboard/profile"><i class="fas fa-user-circle"></i> Hồ sơ</a></li>
            <li><a href="#" id="logout-btn"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a></li>
          </ul>
        `;

              // Xóa dropdown cũ nếu có
              const existingDropdown = document.querySelector(".user-dropdown");
              if (existingDropdown) {
                existingDropdown.remove();
              } else {
                document.body.appendChild(dropdown);

                // Vị trí dropdown
                const rect = userProfile.getBoundingClientRect();
                dropdown.style.position = "absolute";
                dropdown.style.top = rect.bottom + "px";
                dropdown.style.right = window.innerWidth - rect.right + "px";

                // Xử lý đăng xuất
                document
                  .getElementById("logout-btn")
                  .addEventListener("click", async function (e) {
                    e.preventDefault();

                    try {
                      // Gọi API đăng xuất để xóa token khỏi database
                      const response = await fetch("/api/auth/logout", {
                        method: "POST",
                        headers: {
                          Authorization: `Bearer ${token}`,
                        },
                      });

                      if (response.ok) {
                        console.log("Logout successful");
                      } else {
                        console.log("Logout failed");
                      }
                    } catch (error) {
                      console.error("Logout error:", error);
                    } finally {
                      // Xóa token và thông tin người dùng khỏi localStorage
                      localStorage.removeItem("token");
                      localStorage.removeItem("user");

                      // Chuyển hướng về trang đăng nhập
                      window.location.href = "/";
                    }
                  });

                // Đóng dropdown khi click ra ngoài
                document.addEventListener("click", function closeDropdown(e) {
                  if (
                    !userProfile.contains(e.target) &&
                    !dropdown.contains(e.target)
                  ) {
                    dropdown.remove();
                    document.removeEventListener("click", closeDropdown);
                  }
                });
              }
            });
          }
        });
      </script>
      <script>
        document.addEventListener("DOMContentLoaded", function () {
          const toggle = document.getElementById("notification-toggle");
          const dropdown = document.getElementById("notification-dropdown");
          const listContainer = document.getElementById("notification-list");
          // Gọi API lấy thông báo khi vừa load trang
          (async () => {
            try {
              const token = localStorage.getItem("token");
              const response = await fetch("/api/notify/admin", {
                headers: {
                  Authorization: `Bearer ${token}`,
                },
              });

              const allNotifications = await response.json();
              const today = new Date().toLocaleDateString('vi-VN'); 
              const todayNotifications = allNotifications.filter((noti) => {
                const notiDate = new Date(noti.created_at).toLocaleDateString('vi-VN');
                const isToday = notiDate === today;
                const isOrderType = Number(noti.type_id) === 15;
                // 
                return isOrderType && isToday;
              });
              // 
              const countElement = document.getElementById("notification-count");
              countElement.textContent = todayNotifications.length;
              countElement.style.display = todayNotifications.length > 0 ? "inline-block" : "none";
            } catch (err) {
            }
          })();

          toggle.addEventListener("click", async () => {
            dropdown.classList.toggle("show");

            if (dropdown.classList.contains("show")) {
              try {
                const token = localStorage.getItem("token");

                const response = await fetch("/api/notify/admin", {
                  headers: {
                    Authorization: `Bearer ${token}`,
                  },
                });

                // 

                if (response.ok) {
                  const allNotifications = await response.json(); 

                  // 
                  listContainer.innerHTML = "";

                  const today = new Date().toLocaleDateString('vi-VN');

                  // Lọc thông báo hôm nay có type là "order"
                  const todayNotifications = allNotifications.filter((noti) => {
                    const notiDate = new Date(noti.created_at).toLocaleDateString('vi-VN');
                    const isToday = notiDate === today;
                    const isOrderType = Number(noti.type_id) === 15;
                    return isOrderType && isToday;
                  });

                  // Cập nhật số lượng hiển thị
                  const countElement = document.getElementById("notification-count");
                  countElement.textContent = todayNotifications.length;
                  countElement.style.display = todayNotifications.length > 0 ? "inline-block" : "none";

                  if (todayNotifications.length > 0) {
                    todayNotifications.forEach((noti) => {
                      const item = document.createElement("div");
                      item.className = "notification-item";
                      item.innerHTML = `
            <div class="icon"><i class="fas fa-bell"></i></div>
            <div class="content">
              <div class="title">${noti.message}</div>
              <div class="time">${formatTimeAgo(noti.created_at)}</div>
            </div>
          `;
                      listContainer.appendChild(item);
                    });
                  } else {
                    listContainer.innerHTML = '<div class="p-3 text-center text-muted">Không có thông báo nào.</div>';
                  }
                } else {
                }
              } catch (err) {
              }
            }

          });

          // Ẩn dropdown khi click ra ngoài
          document.addEventListener("click", function (e) {
            if (!dropdown.contains(e.target) && !toggle.contains(e.target)) {
              dropdown.classList.remove("show");
            }
          });

          // Hàm định dạng thời gian đơn giản
          function formatTimeAgo(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diff = Math.floor((now - date) / 1000); // in seconds

            if (diff < 60) return "Vừa xong";
            else if (diff < 3600) return `${Math.floor(diff / 60)} phút trước`;
            else if (diff < 86400) return `${Math.floor(diff / 3600)} giờ trước`;
            else return `${Math.floor(diff / 86400)} ngày trước`;
          }
        });

      </script>
